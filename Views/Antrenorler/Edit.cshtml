@model SporSalonuYonetimSistemi.Models.Antrenor

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Antrenor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AntrenorId" />
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soyad" class="control-label"></label>
                <input asp-for="Soyad" class="form-control" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UzmanlikAlanlari" class="control-label"></label>
                <input asp-for="UzmanlikAlanlari" class="form-control" />
                <span asp-validation-for="UzmanlikAlanlari" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotografUrl" class="control-label"></label>
                <input asp-for="FotografUrl" class="form-control" />
                <span asp-validation-for="FotografUrl" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 border p-3">
                <label class="fw-bold">Verebileceği Hizmetler:</label>
                <div class="row">
                    @{
                        var tumHizmetler = (List<SporSalonuYonetimSistemi.Models.Hizmet>)ViewBag.Hizmetler;
                        var seciliListesi = (List<int>)ViewBag.SeciliHizmetler;
                    }
                    @foreach (var hizmet in tumHizmetler)
                    {
                        bool seciliMi = seciliListesi.Contains(hizmet.HizmetId);
                            <div class="col-6">
                                <input type="checkbox" name="selectedHizmetler" value="@hizmet.HizmetId" @(seciliMi ? "checked" : "") /> @hizmet.Ad
                            </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
