@model IEnumerable<SporSalonuYonetimSistemi.Models.Antrenor>

@{
    ViewData["Title"] = "Antrenörler";
    // Admin mi diye kontrol ediyoruz
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container mt-4">
    <h1>Antrenör Kadromuz</h1>

    @if (isAdmin)
    {
            <p>
                <a asp-action="Create" class="btn btn-primary">Yeni Antrenör Ekle</a>
            </p>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Ad)</th>
                <th>@Html.DisplayNameFor(model => model.Soyad)</th>
                <th>@Html.DisplayNameFor(model => model.UzmanlikAlanlari)</th>

                @if (isAdmin)
                {
                        <th>İşlemler</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                        <td>@Html.DisplayFor(modelItem => item.Soyad)</td>
                        <td>@Html.DisplayFor(modelItem => item.UzmanlikAlanlari)</td>

                    @if (isAdmin)
                    {
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.AntrenorId" class="btn btn-sm btn-warning">Düzenle</a> |
                                    <a asp-action="Delete" asp-route-id="@item.AntrenorId" class="btn btn-sm btn-danger">Sil</a>
                                </td>
                    }
                    </tr>
            }
        </tbody>
    </table>
</div>