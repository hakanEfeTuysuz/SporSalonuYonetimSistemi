@model SporSalonuYonetimSistemi.Models.Antrenor

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Antrenor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soyad" class="control-label"></label>
                <input asp-for="Soyad" class="form-control" />
                <span asp-validation-for="Soyad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UzmanlikAlanlari" class="control-label"></label>
                <input asp-for="UzmanlikAlanlari" class="form-control" />
                <span asp-validation-for="UzmanlikAlanlari" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotografUrl" class="control-label"></label>
                <input asp-for="FotografUrl" class="form-control" />
                <span asp-validation-for="FotografUrl" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CalismaBaslangic" class="control-label fw-bold">Mesai Başlangıç</label>
                        <input asp-for="CalismaBaslangic" class="form-control" type="time" value="09:00" />
                        <span asp-validation-for="CalismaBaslangic" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="CalismaBitis" class="control-label fw-bold">Mesai Bitiş</label>
                        <input asp-for="CalismaBitis" class="form-control" type="time" value="18:00" />
                        <span asp-validation-for="CalismaBitis" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mb-3 border p-3">
                <label class="fw-bold">Verebileceği Hizmetler:</label>
                <div class="row">
                    @foreach (var hizmet in (List<SporSalonuYonetimSistemi.Models.Hizmet>)ViewBag.Hizmetler)
                    {
                            <div class="col-6">
                                <input type="checkbox" name="selectedHizmetler" value="@hizmet.HizmetId" /> @hizmet.Ad
                            </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
