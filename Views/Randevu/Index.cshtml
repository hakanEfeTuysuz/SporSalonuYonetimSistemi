@model IEnumerable<SporSalonuYonetimSistemi.Models.Randevu>

@{
    ViewData["Title"] = "Randevu Listesi";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-3">
        <div>
            <h2 class="fw-bold text-primary mb-0">
                <i class="bi bi-calendar-check me-2"></i>
                @(isAdmin ? "Yönetim Paneli: Tüm Randevular" : "Randevularım")
            </h2>
            <small class="text-muted">Toplam @Model.Count() randevu listeleniyor.</small>
        </div>

        @if (!isAdmin)
        {
                <a asp-action="Olustur" class="btn btn-success shadow-sm rounded-pill px-4">
                    📅 Yeni Randevu Al
                </a>
        }
    </div>

    @if (!Model.Any())
    {
            <div class="alert alert-light text-center border shadow-sm p-5">
                <h4 class="alert-heading fw-bold text-muted">Henüz randevu yok 😔</h4>
                <p>Hemen yeni bir randevu alarak spora başlayın!</p>
            </div>
    }
    else
    {
            <div class="card shadow-sm border-0">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="py-3 ps-4">Tarih & Saat</th>
                                    <th class="py-3">Antrenör & Hizmet</th>
                                    <th class="py-3">Detaylar</th>

                                @if (isAdmin)
                                {
                                    <th class="py-3">Üye</th>
                                }

                                    <th class="py-3">Durum</th>

                                @if (isAdmin)
                                {
                                    <th class="py-3 text-end pe-4">İşlemler</th>
                                }
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="fw-bold">@item.RandevuTarihi.ToString("dd MMMM yyyy")</div>
                                                <div class="text-muted small">@item.RandevuTarihi.ToString("HH:mm")</div>
                                            </td>

                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="https://ui-avatars.com/api/?name=@(item.Antrenor?.Ad)+@(item.Antrenor?.Soyad)&background=random&color=fff&size=64&bold=true" 
                                                         class="rounded-circle me-3 shadow-sm" 
                                                         alt="@item.Antrenor?.Ad" 
                                                         width="40" height="40">

                                                    <div>
                                                        <div class="fw-bold">@item.Antrenor?.Ad @item.Antrenor?.Soyad</div>
                                                        <div class="text-muted small">@item.Hizmet?.Ad</div>
                                                    </div>
                                                </div>
                                            </td>

                                            <td>
                                                <span class="badge bg-light text-dark border">⏱️ @item.Hizmet?.Sure dk</span>
                                                <span class="badge bg-light text-dark border">💰 @item.Hizmet?.Ucret ₺</span>
                                            </td>

                                    @if (isAdmin)
                                    {
                                                    <td>
                                                        <span class="fw-bold text-dark">@item.Uye?.UserName</span>
                                                    </td>
                                    }

                                            <td>
                                        @if (item.OnaylandiMi)
                                        {
                                                        <span class="badge bg-success-subtle text-success border border-success px-3 py-2 rounded-pill">
                                                            ✅ Onaylandı
                                                        </span>
                                        }
                                        else
                                        {
                                                        <span class="badge bg-warning-subtle text-warning border border-warning px-3 py-2 rounded-pill">
                                                            ⏳ Bekliyor
                                                        </span>
                                        }
                                            </td>

                                    @if (isAdmin)
                                    {
                                                    <td class="text-end pe-4">
                                                        <div class="btn-group">
                                                @if (!item.OnaylandiMi)
                                                {
                                                                    <form asp-action="Onayla" method="post" class="d-inline">
                                                                        <input type="hidden" name="id" value="@item.RandevuId" />
                                                                        <button type="submit" class="btn btn-sm btn-success me-1" title="Onayla">
                                                                            ✔
                                                                        </button>
                                                                    </form>
                                                }

                                                            <form asp-action="Reddet" method="post" class="d-inline" onsubmit="return confirm('Bu randevuyu silmek istediğinize emin misiniz?');">
                                                                <input type="hidden" name="id" value="@item.RandevuId" />
                                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Reddet / Sil">
                                                                    ✖
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </td>
                                    }
                                        </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    }
</div>